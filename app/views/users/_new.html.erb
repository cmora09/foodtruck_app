<div class="container">
<div class="row signup_banner">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<h1 class="center create-acc">Create your Account</h1>
	<div class="signin_input center">
		<%= form_for @user do |f| %>
			<label class="form-input">Email:</label>
			<br>
			<%= f.text_field :email %>
			<br>
			<label class="form-input">Password:</label>
			<br>
			<%= f.password_field :password %>
			<br>
			<label class="form-input">Confirm Password:</label>
			<br>
			<%= f.password_field :password_confirmation %>
			<br><br>
			<%= f.submit "Sign Up" %>
		<% end %>
	</div>
	</div>
</div>
</div>