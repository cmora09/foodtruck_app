<!DOCTYPE html>
<html>
<head>
  <title>FoodtruckApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js"></script>
  <link rel="stylesheet" type="text/css" href="/animations.css">
</head>
<body onload="findMe()">

<!-- this is the navbar (start) -->
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/"><img alt="Brand" src="<%= image_path("logo_icon.png")%>" class="logo_icon"></a>
      <a class="navbar-brand2" href="/">
				TRUCKLY
			</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      
    
      <ul class="nav navbar-nav navbar-right">
      <% if logged_in? %>
        <% if current_user.truck_owner? %>
            <li><a href="/trucks">MY TRUCKS</a></li>
          <% else %>
            <li><%= link_to "MY ORDERS" , user_myorders_path(current_user)%></li>
            <li><a href="/trucks">TRUCKS</a></li>
        <% end %>
        <li><a href="/about">ABOUT US</a></li>
        <li><%= link_to "LOG OUT" , log_out_path(current_user), method: :delete %></li>
      <% else %>
        <li><a href="/trucks">TRUCKS</a></li>
        <li><a href="/about">ABOUT US</a></li>
      </ul>
      <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<!-- this is the navbar (close) -->

<%= yield %>



<div class="container white">
	<div class="row panel-footer center">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<p>CONTACT</p>
		<p>Help & Support</p>
		<p>1-888-249-6070</p>
		<p>Email Us</p>
	</div>
	</div>
</div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
</body>
</html>
